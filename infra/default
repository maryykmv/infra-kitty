server {
    server_name prjct.ddns.net;

#    location /sentry-debug/ {
#        proxy_pass http://127.0.0.1:8000;
#    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
    }	
    
    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/prjct.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/prjct.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = prjct.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name prjct.ddns.net;
    return 404; # managed by Certbot

}

server {	
    server_name kittygramm.ddns.net;

#    location /sentry-debug/ {
#        proxy_pass http://127.0.0.1:8000;
#    }

    location /media/ {
        alias /var/www/kittygram/media/;
    }
    
    location /admin/ {
        proxy_pass http://127.0.0.1:8080;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8080;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/prjct.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/prjct.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = kittygramm.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;	
    server_name kittygramm.ddns.net;
    return 404; # managed by Certbot


}
